{
  "project": {
    "name": "RalphGraph",
    "version": "1.0.0",
    "description": "Expert AI Agent for Graphic Design & Sellable Digital Products",
    "author": "Ralph Randy Lekane Tsague",
    "license": "Apache 2.0",
    "repository": "https://github.com/username/RalphGraph",
    "language": "en"
  },
  "agent": {
    "role": "Expert Graphic & Digital Products AI Agent",
    "expertise_areas": [
      "Visual Identity Systems",
      "Digital Templates",
      "Print & POD",
      "Marketplace Optimization",
      "Technical Specifications",
      "Legal Compliance",
      "Sales Copy Optimization"
    ],
    "methodologies": {
      "phase_1": {
        "name": "Clarification",
        "description": "Gather requirements through targeted questions",
        "questions_count": 6,
        "focus": [
          "Product Type",
          "Platform/Marketplace",
          "Target Audience",
          "Design Style",
          "Tools & Formats",
          "Constraints & Deadline"
        ]
      },
      "phase_2": {
        "name": "Creative Directions",
        "description": "Propose 2-4 distinct creative concepts",
        "concepts_count": 4,
        "includes": [
          "Style references",
          "Color palettes",
          "Typography recommendations",
          "Layout concepts"
        ]
      },
      "phase_3": {
        "name": "Detailed Specifications",
        "description": "Develop comprehensive design specifications",
        "deliverables": [
          "Design briefs",
          "Color specifications",
          "Typography hierarchy",
          "Layout details",
          "Component systems"
        ]
      },
      "phase_4": {
        "name": "Technical Requirements",
        "description": "Provide exact technical specifications",
        "includes": [
          "Dimensions",
          "Resolution (DPI)",
          "Color spaces",
          "File formats",
          "File organization",
          "Naming conventions"
        ]
      },
      "phase_5": {
        "name": "Sales Optimization",
        "description": "Create marketplace-ready content",
        "includes": [
          "SEO-optimized titles",
          "Product descriptions",
          "Keywords/tags",
          "Sales arguments",
          "Mockup specifications"
        ]
      },
      "phase_6": {
        "name": "Iterative Refinement",
        "description": "Continuous improvement and variations",
        "activities": [
          "Design refinements",
          "Alternative concepts",
          "Optimization suggestions",
          "Upsell opportunities"
        ]
      }
    }
  },
  "marketplaces": {
    "etsy": {
      "name": "Etsy",
      "type": "Marketplace with integrated traffic",
      "seller_commission": 0.06,
      "payment_methods": ["PayPal", "Direct Deposit"],
      "optimization": {
        "title_max_chars": 140,
        "tags_max": 13,
        "tag_min_words": 1,
        "tag_max_words": 6,
        "mockups_recommended": 6,
        "mockups_minimum": 3
      }
    },
    "creative_market": {
      "name": "Creative Market",
      "type": "Curated marketplace for designers",
      "seller_commission": 0.60,
      "application_portfolio_min": 10,
      "licensing_options": [
        "Personal Use",
        "Commercial Use"
      ],
      "exclusive": false,
      "mockups_for_staff_picks": 3
    },
    "gumroad": {
      "name": "Gumroad",
      "type": "Creator platform",
      "seller_commission_percentage": 0.10,
      "pricing_models": [
        "Fixed Price",
        "Pay What You Want",
        "Subscription",
        "Tiered Pricing"
      ],
      "no_monthly_fees": true
    },
    "shopify": {
      "name": "Shopify",
      "type": "Independent e-commerce",
      "seller_commission": 0,
      "integration_options": [
        "POD apps",
        "Digital downloads",
        "Subscriptions"
      ],
      "requires_external_traffic": true
    },
    "pod_platforms": {
      "printful": {
        "name": "Printful",
        "integration": "Shopify, Etsy, WooCommerce",
        "products": ["Apparel", "Accessories", "Home Decor", "Mugs"]
      },
      "printify": {
        "name": "Printify",
        "integration": "Multiple platforms",
        "products": ["Apparel", "Mugs", "Posters", "Phone Cases"]
      },
      "redbubble": {
        "name": "Redbubble",
        "type": "Independent POD marketplace",
        "seller_commission": 0.20,
        "products": ["Apparel", "Mugs", "Posters", "Stickers", "Phone Cases"]
      }
    }
  },
